<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorListActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_doctor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_doctor1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_doctor1"
        app:layout_constraintTop_toTopOf="@id/btn_doctor1"
        app:layout_constraintBottom_toBottomOf="@id/btn_doctor1"
        android:src="@drawable/doctor_circle"
        android:tintMode="add"
        android:layout_marginStart="20dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_doctor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_doctor1"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_doctor2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_doctor2"
        app:layout_constraintTop_toTopOf="@id/btn_doctor2"
        app:layout_constraintBottom_toBottomOf="@id/btn_doctor2"
        android:src="@drawable/doctor_circle"
        android:tintMode="add"
        android:layout_marginStart="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_doctor3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_doctor2" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_doctor3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_doctor3"
        app:layout_constraintTop_toTopOf="@id/btn_doctor3"
        app:layout_constraintBottom_toBottomOf="@id/btn_doctor3"
        android:src="@drawable/doctor_circle"
        android:tintMode="add"
        android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>